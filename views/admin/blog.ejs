<% if (blog.length > 0) { %>
  
<h2 class="m-2">آخرین پست ها</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">title</th>
        <th scope="col">date</th>
        <th scope="col">status</th>
        <th scope="col">-</th>
        <th scope="col">-</th>
      </tr>
    </thead>
    <tbody>
      <% for(let blogg of blog) {%>
      <tr>
        <td>1</td>
        <td><a href="/post/<%= blogg._id%>"><%= blogg.title %></a></td>
        <td><%= formatDate(blogg.createdAt) %></td>
        <td><span class="badge <%= blogg.status === "public" ? 'text-bg-success' : 'text-bg-warning' %>">
          <%= blogg.status === "public" ? "خصوصی" : "عمومی"%>
        </span></td>
        <td>
          <a href="/dashboard/edit-post/<%= blogg._id %>" class="btn btn-sm btn-primary">ویرایش</a>
      </td>
      <td>
          <a href="/dashboard/delete-post/<%= blogg._id %>" class="btn btn-sm btn-danger">حذف</a>
      </td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <%- include("../include/pagination.ejs") %>
</div>
  <% } else { %>
    <div class="text-center">
      <h3 class="mt-2">not post yet</h3>
    </div>
    
    <% } %>
